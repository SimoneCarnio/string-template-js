{
  "name": "string-template-js",
  "version": "1.0.1",
  "main": "index.js",
  "scripts": {
    "lint": "eslint src/",
    "build": "npm run lint && babel src/index.js --out-file index.js",
    "test": "npm run build && mocha test/index.js"
  },
  "description": "A string-templating utility",
  "dependencies": {
    "babel-polyfill": "^6.26.0",
    "babel-preset-es2015": "^6.24.1"
  },
  "devDependencies": {
    "babel-cli": "^6.26.0",
    "babelify": "^8.0.0",
    "eslint": "^4.18.1",
    "mocha": "^4.0.1",
    "unit.js": "^2.0.0"
  },
  "eslintConfig": {
    "env": {
      "browser": true,
      "commonjs": true,
      "es6": true,
      "node": true
    },
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaFeatures": {
        "jsx": true
      },
      "sourceType": "module"
    },
    "rules": {
      "indent": [
        "error",
        2
      ],
      "linebreak-style": [
        "error",
        "unix"
      ],
      "no-empty": "off",
      "quotes": [
        "error",
        "double"
      ],
      "semi": [
        "error",
        "always"
      ]
    }
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "files": [
    "index.js"
  ],
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "keywords": [
    "string template",
    "template",
    "string template literal"
  ],
  "author": "Lucian Vuc",
  "homepage": "https://github.com/luciVuc/string-template-js#readme",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/luciVuc/string-template-js.git"
  }
}
